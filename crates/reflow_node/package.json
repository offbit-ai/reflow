{
  "name": "@offbit-ai/reflow-nodejs",
  "version": "0.1.0",
  "description": "Node.js bindings for Reflow flowbased programming framework",
  "main": "index.node",

  "keywords": [
    "reflow",
    "network",
    "actor-model",
    "graph",
    "workflow",
    "rust",
    "neon",
    "native"
  ],
  "author": "Reflow Team",
  "license": "MIT",
  "scripts": {
    "build": "node build.js",
    "build-debug": "node build.js debug",
    "build-release": "node build.js",
    "copy-binary": "cargo-cp-artifact -a cdylib reflow_node index.node -- cargo build --release",
    "copy-binary-debug": "cargo-cp-artifact -a cdylib reflow_node index.node -- cargo build",
    "test": "npm run build && node examples/basic_example.js",
    "test-debug": "npm run build-debug && node examples/basic_example.js",
    "clean": "cargo clean && rm -f index.node",
    "lint": "cargo clippy -- -D warnings",
    "fmt": "cargo fmt --check",
    "docs": "cargo doc --open",
    "benchmark": "npm run build && node benchmarks/performance.js",
    "example:basic": "npm run build && node examples/basic_example.js",
    "example:advanced": "npm run build && node examples/advanced_example.js",
    "install": "npm run build",
    "prepack": "npm run build && npm run generate-types",
    "generate-types": "node scripts/generate-types.js",
    "check": "cargo check",
    "verify": "npm run lint && npm run fmt && npm run test"
  },
  "files": [
    "index.node",
    "examples/",
    "src/"
  ],
  "devDependencies": {
    "@types/node": "^24.0.7",
    "cargo-cp-artifact": "0.1.9"
  },
  "cpu": [
    "x64",
    "arm64"
  ],
  "os": [
    "darwin",
    "linux",
    "win32"
  ]
}
